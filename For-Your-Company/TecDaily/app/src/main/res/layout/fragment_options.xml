<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RL_optionsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/bgsync_block"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_bg_white_1"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imv_options_bgsyncstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_options_bgsync" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="80"
            android:fontFamily="sans-serif-condensed"
            android:text="Background Sync"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Switch
            android:id="@+id/switch_bg_sync_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_saver_block"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/bgsync_block"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_bg_white_1"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imv_options_batterysaverstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_options_batterysaver" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="80"
            android:fontFamily="sans-serif-condensed"
            android:text="Battery Saver"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Switch
            android:id="@+id/switch_battery_saver_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_block"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/rounded_bg_white_1"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:weightSum="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_options_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:text="About"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>